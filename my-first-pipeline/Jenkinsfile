pipeline {
    agent {
        docker { image 'node:01' }
    }

    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
        always {
            echo '🏁 This runs no matter what.'
        }
    }
}
