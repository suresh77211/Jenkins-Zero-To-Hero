pipeline {
    agent {
        docker { image 'node:01' }
    }

    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build succeeded!'
        }
        failure {
            echo 'âŒ Build failed!'
        }
        always {
            echo 'ğŸ This runs no matter what.'
        }
    }
}
